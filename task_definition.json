{
    "family": "Wordpress--TDF",
    "containerDefinitions": [
        {
            "name": "wordpress",
            "image": "wordpress:5.2",
            "cpu": 0,
            "links": [
                "mysql"
            ],
            "portMappings": [
                {
                    "name": "wordpress-80-tcp",
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "WORDPRESS_DB_USER",
                    "value": "${WORDPRESS_DB_USER}"
                },
                {
                    "name": "WORDPRESS_DB_HOST",
                    "value": "${WORDPRESS_DB_HOST}"
                },
                {
                    "name": "WORDPRESS_DB_PASSWORD",
                    "value": "${WORDPRESS_DB_PASSWORD}"
                },
                {
                    "name": "WORDPRESS_DB_NAME",
                    "value": "${WORDPRESS_DB_NAME}"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/Wordpress--TDF",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "systemControls": []
        },
        {
            "name": "mysql",
            "image": "mysql:5",
            "cpu": 0,
            "portMappings": [],
            "essential": true,
            "environment": [
                {
                    "name": "MYSQL_DATABASE",
                    "value": "${MYSQL_DATABASE}"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "${MYSQL_PASSWORD}"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "${MYSQL_ROOT_PASSWORD}"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "${MYSQL_USER}"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "systemControls": []
        }
    ],
    "taskRoleArn": "arn:aws:iam::637423349100:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::637423349100:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "EC2"
    ],
    "cpu": "300",
    "memory": "300",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}
